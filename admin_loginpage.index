<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Home Services - Login</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      background: url('imgs/home.png') no-repeat center center/cover;
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      backdrop-filter: blur(4px);
    }

    .login-container {
      background: rgba(255, 255, 255, 0.95);
      padding: 40px;
      border-radius: 15px;
      width: 100%;
      max-width: 400px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .login-container h2 {
      text-align: center;
      margin-bottom: 20px;
      color: #1a202c;
    }

    .login-container .input-group {
      margin-bottom: 20px;
    }

    .login-container .input-group label {
      display: block;
      margin-bottom: 8px;
      font-weight: bold;
    }

    .login-container .input-group input {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 8px;
      font-size: 16px;
    }

    .login-container button {
      width: 100%;
      padding: 12px;
      background-color: #2b6cb0;
      color: #fff;
      font-size: 16px;
      font-weight: bold;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .login-container button:hover {
      background-color: #2c5282;
    }

    .tagline {
      text-align: center;
      margin-top: 15px;
      font-size: 14px;
      color: #555;
    }

    .icons {
      display: flex;
      justify-content: center;
      gap: 15px;
      margin-top: 25px;
    }

    .icons img {
      width: 32px;
      opacity: 0.7;
    }

    .icons img:hover {
      opacity: 1;
    }
  </style>
</head>
<body>
  <div class="login-container">
    <h2>LogIn</h2>
    <form id="loginForm">
      <div class="input-group">
        <label for="nId">National ID</label>
        <input type="text" id="nId" placeholder="National ID" required>
      </div>

      <div class="input-group">
        <label for="email">Email</label>
        <input type="email" id="email" placeholder="you@gmail.com" required>
      </div>

      <div class="input-group">
        <label for="password">Password</label>
        <input type="password" id="password" placeholder="Enter your password" required>
      </div>

      <button type="submit">Log In</button>
    </form>
  </div>

  <script>
    document.getElementById("loginForm").addEventListener("submit", function(event) {
      event.preventDefault();

      const nId = document.getElementById("nId").value.trim();
      const email = document.getElementById("email").value.trim();
      const password = document.getElementById("password").value.trim();

      // Example credentials (you can update with real validation)
      const validId = "123456789";
      const validEmail = "admin@gmail.com";
      const validPassword = "admin123";

      if (nId === validId && email === validEmail && password === validPassword) {
        // Redirect to dashboard
        window.location.href = "admin_dashboard.html";
      } else {
        alert("Invalid credentials. Please try again.");
      }
    });
  </script>
</body>
</html>
